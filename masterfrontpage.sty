%% Text:
\newcommand{\MFP@print@title}
{
    \put(\MFPtextx, \MFPtexty)
    {
        \vbox to 50 mm
        {
            \hsize = \MFPtextlength
            \raggedright

            \begin{center}
            \normalfont
            \fontsize{18}{20 pt}
            \selectfont
            \MFP@option
            \vfill
            \MFP@type
            \vfill
            \MFP@titlesize
            \selectfont
            \bfseries
            \@title

            \newlength{\MFP@titlelength}
            \settowidth{\MFP@titlelength}{\@title}


            \ifthenelse
            { 
                \equal{\MFP@title}{Ordinary}
                \AND 
                \lengthtest{\MFP@titlelength < \hsize}
            }
            {
                \def \MFP@skip{2 em}
            }
            {
                \def \MFP@skip{1 em}
            }

            \vskip 0.5ex
            \vfill
            \normalfont
            \fontsize{17}{20 pt}
            \selectfont
            \MFP@subtitle
            \vskip \MFP@skip
            {
                
                \ifdefined\authors
                     \authors
                \else
                     \@author
                \fi
            }

            

            \vfill
            \MFP@supervisor
            \vfill
            \MFP@date
            \end{center}

        }
    }
}


